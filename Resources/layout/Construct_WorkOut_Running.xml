<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >
            <EditText
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/etWorkName"
                android:hint="workout name:"
                android:text=""
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="warm up"
                android:id="@+id/CHwarmUp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="cool down"
                android:id="@+id/CHcoolDown"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#808080"
                android:text="part one:"
                android:textSize="28sp"
                />
            
            <ListView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/listViewInterval1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/BtAddInterval1"
                android:text="make interval"/>
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"                
                android:id="@+id/sb1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="repeats:"
                android:id="@+id/tvRep1"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#808080"
                android:text="part two:"
                android:textSize="28sp"
                android:id="@+id/textView2" 
                />
            
            <ListView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/listViewInterval2"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/BtAddInterval2"
                android:text="make interval"/>
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sb2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="repeats:"
                android:id="@+id/tvRep2"
                />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#808080"
                android:text="part three:"
                android:textSize="28sp"
                />
            <ListView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/listViewInterval3"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/BtAddInterval3"
                android:text="make interval"/>
            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sb3"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="repeats:"
                android:id="@+id/tvRep3"
                />
                


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#808080"
                android:textSize="28sp"
                />
            

                <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:id="@+id/BtFinish"
                android:background="#B0C4DE"
                android:text="Finish"/>

                <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:id="@+id/BtAddToArc"
                android:background="#B0C4DE"
                android:text="add to Archive"/>

               
            
        </LinearLayout>

    </ScrollView>
    

</LinearLayout>
